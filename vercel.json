{
  "redirects": [
    {
      "source": "/articles/:slug*",
      "destination": "/:slug*",
      "permanent": true
    },
    {
      "source": "/articles/:slug*/",
      "destination": "/:slug*",
      "permanent": true
    },
    {
      "source": "/([a-z0-9][a-z0-9\\-]*[a-z0-9])/",
      "destination": "/$1",
      "statusCode": 301,
      "has": [
        {
          "type": "header",
          "key": "host"
        }
      ],
      "missing": [
        {
          "type": "query",
          "key": "page"
        }
      ]
    },
    {
      "source": "/privacy-policy",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/articles/",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "www.techhorizons.co.il"
        }
      ],
      "destination": "https://techhorizons.co.il/:path*",
      "permanent": true
    },
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "techhorizons.co.il"
        },
        {
          "type": "header",
          "key": "x-forwarded-proto",
          "value": "http"
        }
      ],
      "destination": "https://techhorizons.co.il/:path*",
      "permanent": true
    },
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "mail.techhorizons.co.il"
        }
      ],
      "destination": "https://techhorizons.co.il/:path*",
      "permanent": true
    },
    {
      "source": "/robots.txt",
      "has": [
        {
          "type": "host",
          "value": "mail.techhorizons.co.il"
        }
      ],
      "destination": "https://techhorizons.co.il/robots.txt",
      "permanent": true
    },
    {
      "source": "/page/:path*",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/:slug*/feed/:path*",
      "destination": "/:slug*",
      "permanent": true
    },
    {
      "source": "/:slug*/feed",
      "destination": "/:slug*",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1"
        }
      ]
    },
    {
      "source": "/categories/:category",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "index, follow, max-image-preview:standard, max-snippet:300"
        }
      ]
    },
    {
      "source": "/categories/:category/:page",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "index, follow, max-image-preview:none, max-snippet:150"
        }
      ]
    },
    {
      "source": "/:slug*",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1"
        }
      ]
    }
  ],
  "routes": [
    {
      "src": "/categories/([^/]+)/(\\d+)",
      "dest": "/categories/$1/$2",
      "status": 200
    }
  ]
}