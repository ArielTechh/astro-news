---
import { OTHER_LINKS } from "@/lib/config";
---

<footer
  class="footer border-primary-content/80 dark:border-primary-content/20 py-6"
>
  <div class="container">
    <div class="divider w-full h-1"></div>
    <div class="flex flex-col gap-4" style="width:100%;">
      <nav
        class="flex flex-wrap gap-4 text-xs mt-2"
        style="justify-content: center;"
      >
        {
          OTHER_LINKS.map(({ href, text, target }) => (
            <a href={href} class="link link-hover" target={target ?? "_self"}>
              {text}
            </a>
          ))
        }
      </nav>
    </div>
  </div>
</footer>
