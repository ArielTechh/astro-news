        return placeholder;
      }

      // Ajouter les styles CSS isol√©s une seule fois
      static ensureStyles() {
        if (document.getElementById("adsense-lazy-styles")) return;

        const style = document.createElement("style");
        style.id = "adsense-lazy-styles";
        style.textContent = `
          .adsense-lazy-placeholder {
