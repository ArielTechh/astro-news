    function handleConsent(accepted) {
      setCookie(
        COOKIE_NAME,
        accepted ? "accepted" : "rejected",
        COOKIE_DURATION,
      );
      hideBanner();

      if (accepted) {
        consentGiven = true;

        gtag("consent", "update", {
