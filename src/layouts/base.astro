---
import { SITE } from "@/lib/config";
import Head from "@/components/bases/head.astro";
import Header from "@/components/shared/header.astro";
import Footer from "@/components/shared/footer.astro";
import type { Entry } from "@/lib/types";
import { getMeta } from "@/lib/utils/getMetaSanity";
import TarteAuCitron from "../components/TarteAuCitron.astro";
// ðŸš€ CHANGEMENT 1 : Composants Vercel commentÃ©s temporairement
// import SpeedInsights from "@vercel/speed-insights/astro";
// import Analytics from "@vercel/analytics/astro";
import AccessibilityWidget from "../components/AccessibilityWidget.astro";

type Props = {
  entry: Entry;
  article?: any;
  readingTime?: number;
  canonical?: string;
};

const { entry, article, readingTime, canonical } = Astro.props;

const meta = await getMeta(entry);

const GTM_ID = import.meta.env.GTM_ID || "GTM-PQC6K9BZ";
---

<!doctype html>
<html lang="he" dir="rtl">
  <Head
    meta={meta}
    article={article}
    readingTime={readingTime}
    canonical={canonical}
  />
  <body class="flex flex-col">
    <noscript>
      <iframe
        src={`https://www.googletagmanager.com/ns.html?id=${GTM_ID}`}
        height="0"
        width="0"
        style="display:none;visibility:hidden"
      >
      </iframe>
    </noscript>

    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
    <TarteAuCitron />
    <!-- ðŸš€ CHANGEMENT 1 : Vercel Analytics commentÃ©s -->
    <!-- <SpeedInsights /> -->
    <!-- <Analytics /> -->
    <AccessibilityWidget />

    <!-- ðŸš€ CHANGEMENT 2 : GTM diffÃ©rÃ© Ã  3 secondes au lieu de 1 seconde -->
    <script define:vars={{ GTM_ID }}>
      // Chargement diffÃ©rÃ© de Google Tag Manager (aprÃ¨s 3 secondes)
      setTimeout(() => {
        (function (w, d, s, l, i) {
          w[l] = w[l] || [];
          w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
          var f = d.getElementsByTagName(s)[0],
            j = d.createElement(s),
            dl = l != "dataLayer" ? "&l=" + l : "";
          j.async = true;
          j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
          f.parentNode.insertBefore(j, f);
        })(window, document, "script", "dataLayer", GTM_ID);
      }, 3000); // ðŸš€ GTM chargÃ© aprÃ¨s 3 secondes au lieu de 1

      // Chargement diffÃ©rÃ© d'AdSense (aprÃ¨s interaction utilisateur)
      let adsenseLoaded = false;

      function loadAdsense() {
        if (!adsenseLoaded) {
          const script = document.createElement("script");
          script.async = true;
          script.src =
            "https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-1113800966089168";
          script.crossOrigin = "anonymous";
          document.head.appendChild(script);
          adsenseLoaded = true;
          console.log("AdSense chargÃ©");
        }
      }

      // ðŸš€ CHANGEMENT 2 : AdSense diffÃ©rÃ© Ã  4 secondes minimum
      document.addEventListener("scroll", loadAdsense, { once: true });
      document.addEventListener("click", loadAdsense, { once: true });
      document.addEventListener("touchstart", loadAdsense, { once: true });
      setTimeout(loadAdsense, 4000); // ðŸš€ Fallback aprÃ¨s 4 secondes au lieu de 2
    </script>
  </body>
</html>
