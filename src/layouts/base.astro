---
import { SITE } from "@/lib/config";
import Head from "@/components/bases/head.astro";
import Header from "@/components/shared/header.astro";
import Footer from "@/components/shared/footer.astro";
import type { Entry } from "@/lib/types";
import { getMeta } from "@/lib/utils/getMetaSanity";
import TarteAuCitron from "../components/TarteAuCitron.astro";
import SpeedInsights from "@vercel/speed-insights/astro";
import Analytics from "@vercel/analytics/astro";
import AccessibilityWidget from "../components/AccessibilityWidget.astro";

type Props = {
  entry: Entry;
  article?: any; // Pour passer les données complètes de l'article
  readingTime?: number;
  canonical?: string; // ← AJOUT : prop canonical
};

const { entry, article, readingTime, canonical } = Astro.props; // ← AJOUT : canonical

const meta = await getMeta(entry);

const GTM_ID = import.meta.env.GTM_ID || "GTM-PQC6K9BZ";
---

<!doctype html>
<html lang="he" dir="rtl">
  <Head
    meta={meta}
    article={article}
    readingTime={readingTime}
    canonical={canonical}
  />
  <!-- ← AJOUT : canonical={canonical} -->
  <body class="flex flex-col">
    <!-- Iframe GTM noscript - gardé pour la compatibilité -->
    <noscript>
      <iframe
        src={`https://www.googletagmanager.com/ns.html?id=${GTM_ID}`}
        height="0"
        width="0"
        style="display:none;visibility:hidden"
      >
      </iframe>
    </noscript>

    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
    <TarteAuCitron />
    <SpeedInsights />
    <Analytics />
    <AccessibilityWidget />

    <!-- Scripts optimisés pour les performances -->
    <script define:vars={{ GTM_ID }}>
      // Chargement différé de Google Tag Manager (après 1 seconde)
      setTimeout(() => {
        (function (w, d, s, l, i) {
          w[l] = w[l] || [];
          w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
          var f = d.getElementsByTagName(s)[0],
            j = d.createElement(s),
            dl = l != "dataLayer" ? "&l=" + l : "";
          j.async = true;
          j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
          f.parentNode.insertBefore(j, f);
        })(window, document, "script", "dataLayer", GTM_ID);
      }, 1000); // GTM chargé après 1 seconde

      // Chargement différé d'AdSense (après interaction utilisateur)
      let adsenseLoaded = false;

      function loadAdsense() {
        if (!adsenseLoaded) {
          const script = document.createElement("script");
          script.async = true;
          script.src =
            "https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-1113800966089168";
          script.crossOrigin = "anonymous";
          document.head.appendChild(script);
          adsenseLoaded = true;
        }
      }

      // Charger AdSense après premier scroll, clic, ou après 3 secondes
      document.addEventListener("scroll", loadAdsense, { once: true });
      document.addEventListener("click", loadAdsense, { once: true });
      document.addEventListener("touchstart", loadAdsense, { once: true }); // Pour mobile
      setTimeout(loadAdsense, 3000); // Fallback après 3 secondes
    </script>
  </body>
</html>
