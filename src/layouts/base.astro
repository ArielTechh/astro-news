---
import { SITE } from "@/lib/config";
import Head from "@/components/bases/head.astro";
import Header from "@/components/shared/header.astro";
import Footer from "@/components/shared/footer.astro";
import type { Entry } from "@/lib/types";
import { getMeta } from "@/lib/utils/getMetaSanity";
import TarteAuCitron from "../components/TarteAuCitron.astro";
import SpeedInsights from "@vercel/speed-insights/astro";
import Analytics from "@vercel/analytics/astro";
import AccessibilityWidget from "../components/AccessibilityWidget.astro";

type Props = {
  entry: Entry;
  article?: any;
  readingTime?: number;
  canonical?: string;
};

const { entry, article, readingTime, canonical } = Astro.props;

const meta = await getMeta(entry);

// Seulement pour le noscript GTM
const GTM_ID = import.meta.env.GTM_ID || "GTM-PQC6K9BZ";

// Chargement conditionnel des analytics Vercel (seulement en production)
const isProduction = import.meta.env.PROD;
---

<!doctype html>
<html lang="he" dir="rtl">
  <Head
    meta={meta}
    article={article}
    readingTime={readingTime}
    canonical={canonical}
  />

  <body class="flex flex-col">
    <!-- GTM noscript - seulement pour les utilisateurs sans JS -->
    <noscript>
      <iframe
        src={`https://www.googletagmanager.com/ns.html?id=${GTM_ID}`}
        height="0"
        width="0"
        style="display:none;visibility:hidden"
      >
      </iframe>
    </noscript>

    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />

    <!-- üç™ Gestion globale du consentement + GTM + AdSense -->
    <TarteAuCitron />

    <!-- üìä Analytics Vercel - seulement en production -->
    {isProduction && <SpeedInsights />}
    {isProduction && <Analytics />}

    <!-- ‚ôø Widget d'accessibilit√© -->
    <AccessibilityWidget />

    <!-- üöÄ ADSENSE FORCE LOADING - Version simplifi√©e qui marche -->
    <script>
      // Force AdSense apr√®s 2 secondes, point final
      setTimeout(() => {
        if (!document.querySelector('script[src*="adsbygoogle"]')) {
          const script = document.createElement("script");
          script.async = true;
          script.src =
            "https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-1113800966089168";
          script.crossOrigin = "anonymous";
          document.head.appendChild(script);

          console.log("üöÄ AdSense FORCED - Should work now!");

          // Configuration auto ads
          script.onload = function () {
            try {
              (adsbygoogle = window.adsbygoogle || []).push({
                google_ad_client: "ca-pub-1113800966089168",
                enable_page_level_ads: true,
              });
              console.log("‚úÖ AdSense auto ads configured");
            } catch (e) {
              console.log(
                "‚ö†Ô∏è AdSense config error (normal if no ad slots):",
                e,
              );
            }
          };
        }
      }, 2000);
    </script>
  </body>
</html>
