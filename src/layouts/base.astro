---
import { SITE } from "@/lib/config";
import Head from "@/components/bases/head.astro";
import Header from "@/components/shared/header.astro";
import Footer from "@/components/shared/footer.astro";
import type { Entry } from "@/lib/types";
import { getMeta } from "@/lib/utils/getMetaSanity";
import TarteAuCitron from "../components/TarteAuCitron.astro";
import SpeedInsights from "@vercel/speed-insights/astro";
import Analytics from "@vercel/analytics/astro";
import AccessibilityWidget from "../components/AccessibilityWidget.astro";

type Props = {
  entry: Entry;
  article?: any; // Pour passer les donn√©es compl√®tes de l'article
  readingTime?: number;
};

const { entry, article, readingTime } = Astro.props;

const meta = await getMeta(entry);

const GTM_ID = import.meta.env.GTM_ID || "GTM-PQC6K9BZ";
---

<!doctype html>
<html lang="he" dir="rtl">
  <Head meta={meta} article={article} readingTime={readingTime} />
  <body class="flex flex-col">
    <noscript>
      <iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-PQC6K9BZ"
        height="0"
        width="0"
        style="display:none;visibility:hidden"
      >
      </iframe>
    </noscript>
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
    <TarteAuCitron />
    <SpeedInsights />
    <Analytics />
    <AccessibilityWidget />

    <!-- AdSense Script am√©lior√© -->
    <script
      async
      src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-1113800966089168"
      crossorigin="anonymous"></script>

    <script is:inline>
      // √âviter les doubles chargements AdSense
      if (!window.adsenseInitialized) {
        window.adsenseInitialized = true;

        function initAdsOnPage() {
          // Attendre que AdSense soit charg√©
          if (typeof window.adsbygoogle === "undefined") {
            setTimeout(initAdsOnPage, 100);
            return;
          }

          const ads = document.querySelectorAll(".adsbygoogle");
          ads.forEach((ad) => {
            // V√©rifier si l'ad n'est pas d√©j√† initialis√©e
            if (!ad.getAttribute("data-adsbygoogle-status")) {
              try {
                (window.adsbygoogle = window.adsbygoogle || []).push({});
                console.log("‚úÖ AdSense ad initialized");
              } catch (e) {
                console.log(
                  "AdSense init error (normal on reload):",
                  e.message,
                );
              }
            }
          });
        }

        function refreshAdsOnNavigation() {
          console.log("üîÑ Refreshing ads on navigation");

          // Attendre que le nouveau contenu soit rendu
          setTimeout(() => {
            const ads = document.querySelectorAll(".adsbygoogle");

            ads.forEach((ad) => {
              // Nettoyer les anciennes ads si elles sont d√©j√† initialis√©es
              if (ad.getAttribute("data-adsbygoogle-status")) {
                ad.removeAttribute("data-adsbygoogle-status");
                ad.innerHTML = "";
                // R√©initialiser les styles
                ad.style.display = "block";
              }
            });

            // R√©initialiser les nouvelles ads apr√®s nettoyage
            setTimeout(() => {
              ads.forEach((ad) => {
                if (!ad.getAttribute("data-adsbygoogle-status")) {
                  try {
                    (window.adsbygoogle = window.adsbygoogle || []).push({});
                    console.log("‚úÖ AdSense ad refreshed on navigation");
                  } catch (e) {
                    console.log("AdSense refresh error (normal):", e.message);
                  }
                }
              });
            }, 200);
          }, 300);
        }

        // Initialiser les ads sur la premi√®re page
        if (document.readyState === "loading") {
          document.addEventListener("DOMContentLoaded", initAdsOnPage);
        } else {
          initAdsOnPage();
        }

        // G√©rer les navigations Astro
        document.addEventListener("astro:page-load", refreshAdsOnNavigation);
      }
    </script>
  </body>
</html>
