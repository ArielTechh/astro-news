---
// src/pages/categories/[category]/[page].astro - VERSION DYNAMIQUE
import { SITE } from "@/lib/config";
import { getAllCategories, getArticlesByCategory } from "@/lib/sanity";
import ListLayout from "@/layouts/list.astro";
import Pagination from "@/components/shared/pagination.astro";
import WideCard from "@/components/cards/wideCard.astro";
import CategoryStructuredData from "@/components/seo/CategoryStructuredData.astro";

// ✨ PLUS DE getStaticPaths - MODE DYNAMIQUE
export const prerender = false;

const { category, page } = Astro.params;
const pageNum = parseInt(page || "1");

// Vérifier que la catégorie existe
const allCategories = await getAllCategories();
const categoryInfo = allCategories.find(
  (cat) => cat.slug?.current === category,
);

if (!categoryInfo) {
  return Astro.redirect("/categories", 301);
}

// Récupérer TOUS les articles de cette catégorie
const allArticles = await getArticlesByCategory(category);
const totalArticles = allArticles.length;
const totalPages = Math.ceil(totalArticles / SITE.postsPerPage);

// ✅ VÉRIFICATION DYNAMIQUE : Si page > totalPages → REDIRECT 301
if (pageNum > totalPages) {
  return Astro.redirect(`/categories/${category}`, 301);
}

// Calculer les articles de cette page
const startIndex = (pageNum - 1) * SITE.postsPerPage;
const endIndex = startIndex + SITE.postsPerPage;
const articles = allArticles.slice(startIndex, endIndex);

const categoryMeta = {
  title: `${categoryInfo.title} - עמוד ${pageNum}`,
  metaTitle: `${categoryInfo.title} - עמוד ${pageNum}`,
  description: `מאמרים בנושא ${categoryInfo.title} - עמוד ${pageNum}`,
  type: "website",
};

const categoryEntry = {
  id: "category-page",
  collection: "views",
  data: categoryMeta,
};

const canonicalUrl = `${SITE.url}/categories/${category}/${pageNum}`;
---

<!-- ✨ STRUCTURED DATA POUR CATÉGORIE PAGINÉE -->
<CategoryStructuredData
  categoryInfo={categoryInfo}
  articles={articles}
  allArticles={allArticles}
  currentPage={pageNum}
  canonicalUrl={canonicalUrl}
/>

<ListLayout
  header={`${categoryInfo.title} - עמוד ${pageNum}`}
  entry={categoryEntry}
  canonical={canonicalUrl}
  customMeta={categoryMeta}
>
  <div dir="rtl">
    <!-- Breadcrumb -->
    {
      categoryInfo?.parent && (
        <nav class="mb-6 text-sm" dir="rtl">
          <a href="/categories" class="text-blue-600 hover:underline">
            כל הקטגוריות
          </a>
          <span class="mx-2">←</span>
          <a
            href={`/categories/${categoryInfo.parent.slug.current}`}
            class="text-blue-600 hover:underline"
          >
            {categoryInfo.parent.title}
          </a>
          <span class="mx-2">←</span>
          <a
            href={`/categories/${categoryInfo.slug.current}`}
            class="text-blue-600 hover:underline"
          >
            {categoryInfo.title}
          </a>
          <span class="mx-2">←</span>
          <span class="text-gray-600">עמוד {pageNum}</span>
        </nav>
      )
    }

    <!-- Compteur -->
    <div class="mb-6 text-sm text-gray-600" dir="rtl">
      <span>{totalArticles} מאמרים בקטגוריה זו</span>
      <span class="mr-4">עמוד {pageNum} מתוך {totalPages}</span>
    </div>

    <!-- Articles -->
    <ul class="flex flex-col gap-2 flex-1">
      {
        articles.map((article, index) => (
          <WideCard article={article} isLast={index === articles.length - 1} />
        ))
      }
    </ul>

    <!-- Pagination -->
    <div dir="ltr" class="mt-8">
      <Pagination
        length={totalPages}
        currentUrl={`/categories/${category}/${pageNum}`}
        currentPage={pageNum}
        baseUrl={`/categories/${category}`}
        prevUrl={pageNum === 2
          ? `/categories/${category}`
          : `/categories/${category}/${pageNum - 1}`}
        nextUrl={pageNum < totalPages
          ? `/categories/${category}/${pageNum + 1}`
          : null}
        lastUrl={`/categories/${category}/${totalPages}`}
      />
    </div>
  </div>
</ListLayout>
