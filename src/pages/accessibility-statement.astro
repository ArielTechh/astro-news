---
// src/pages/accessibility-statement.astro - VERSION CORRIGÉE
import BaseLayout from "@/layouts/base.astro";
import { getPageBySlug } from "@/lib/sanity.js";

// Récupérer la page spécifique
const page = await getPageBySlug("accessibility-statement");

if (!page) {
  return Astro.redirect("/404");
}

// ✅ Entry correcte pour BaseLayout
const entry = {
  id: "accessibility-statement",
  collection: "views",
  data: {
    title: page.title,
    description: page.description || "הצהרת נגישות Tech Horizons",
  },
};

// ✅ Métadonnées spécifiques
const customMeta = {
  title: page.title, // Pas besoin de "| TechHorizons", BaseLayout l'ajoute
  metaTitle: page.title,
  description: page.description || "הצהרת נגישות Tech Horizons",
  type: "website",
};

const canonicalUrl = `${import.meta.env.SITE}/accessibility-statement`;
---

<BaseLayout entry={entry} canonical={canonicalUrl} customMeta={customMeta}>
  <div class="container mx-auto px-6 py-8 max-w-4xl">
    <div class="bg-white rounded-lg shadow-lg p-8" dir="rtl">
      <h1 class="text-4xl font-bold mb-6">{page.title}</h1>

      <!-- Rendu du contenu Sanity -->
      {
        page.content &&
          page.content.map((block: any) => {
            if (block._type === "block") {
              const text =
                block.children?.map((child: any) => child.text).join("") || "";

              if (block.style === "h1") {
                return <h1 class="text-4xl font-bold mt-8 mb-4">{text}</h1>;
              } else if (block.style === "h2") {
                return <h2 class="text-3xl font-semibold mt-6 mb-3">{text}</h2>;
              } else if (block.style === "h3") {
                return <h3 class="text-2xl font-medium mt-4 mb-2">{text}</h3>;
              } else {
                return <p class="mb-4 leading-relaxed text-right">{text}</p>;
              }
            }
            return null;
          })
      }
    </div>
  </div>
</BaseLayout>
